			 <textarea rows="2" cols="30" readonly>{{ inc @index }}: {{this.burger_name}}</textarea>
	</div>		
	<div class = "col-md-6">
	   <form action="/{{this.id}}?_method=PUT" method='POST'>
	   <button class="btn btn-secondary btn-sm" type = "delete">DEVOUR IT!</button>
	   </form>
	</div>
			</div>
			{{/unless}}
			{{/each}}
			</div>
	
